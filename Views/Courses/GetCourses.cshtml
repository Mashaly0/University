@model IEnumerable<University.Models.Course>
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Localization
@inject IViewLocalizer Localizer

<table class="table table-striped table-bordered text-center shadow-sm">
    <thead class="table-dark">
        <tr>
            <th>@Localizer["CourseId"]</th>
            <th>@Localizer["CourseName"]</th>
            <th>@Localizer["Available"]</th>
            <th>@Localizer["Actions"]</th>
            <th>@Localizer["CourseFiles"]</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model)
        {
            <tr>
                <td>@course.Id</td>
                <td>@course.Name</td>
                <td>
                    @if (course.IsAvailable)
                    {
                        <span class="badge bg-success">✅ @Localizer["AvailableYes"]</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">❌ @Localizer["AvailableNo"]</span>
                    }
                </td>

                <td>
                    <a asp-action="Details" asp-route-id="@course.Id" class="btn btn-info btn-sm">
                        🔍 @Localizer["Details"]
                    </a>
                    <a asp-action="Edit" asp-route-id="@course.Id" class="btn btn-warning btn-sm">
                        ✏️ @Localizer["Edit"]
                    </a>
                    <a asp-action="Delete" asp-route-id="@course.Id" class="btn btn-danger btn-sm">
                        ❌ @Localizer["Delete"]
                    </a>
                </td>

                <td>
                    @if (!string.IsNullOrEmpty(course.FilePath))
                    {
                        <a href="@course.FilePath" class="btn btn-info btn-sm" download>⬇️ @Localizer["Download"]</a>
                    }
                    else
                    {
                        <span class="text-muted">@Localizer["NoFile"]</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary mt-3">➕ @Localizer["AddNewCourse"]</a>

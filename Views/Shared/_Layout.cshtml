@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Localization
@using Microsoft.AspNetCore.Http
@inject SignInManager<University.Models.ApplicationUser> SignInManager
@inject UserManager<University.Models.ApplicationUser> UserManager
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    var requestCulture = Context.Features.Get<IRequestCultureFeature>();
    string currentCulture = requestCulture?.RequestCulture.UICulture.TwoLetterISOLanguageName ?? "ar";
    string dir = currentCulture == "ar" ? "rtl" : "ltr";
}

<!DOCTYPE html>
<html lang="@currentCulture" dir="@dir">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @Localizer["UniversityName"]</title>

    <!-- Bootstrap -->
    @if (currentCulture == "ar")
    {
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.rtl.min.css" />
    }
    else
    {
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    }

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/University.styles.css" asp-append-version="true" />

    <style>
        body {
            font-family: 'Cairo', sans-serif;
            background-color: #f8f9fa;
        }

        .navbar-brand img {
            width: 150px;
            height: 50px;
            object-fit: contain;
            margin-left: 8px;
        }

        footer {
            background-color: #f1f1f1;
            padding: 15px 0;
            text-align: center;
            margin-top: 40px;
        }

        .navbar-nav .nav-link {
            color: #000 !important;
            font-weight: 700;
        }

            .navbar-nav .nav-link:hover {
                color: #333 !important;
            }

        .navbar-brand {
            color: #000;
            font-weight: 700;
        }
    </style>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg shadow-sm sticky-top mb-4" style="background-color: #fff;">
            <div class="container">

                <!-- شعار الجامعة -->
                <a class="navbar-brand fw-bold d-flex align-items-center"
                   asp-controller="Home" asp-action="Index">
                    <img src="~/img/IMG_6091.png" alt="@Localizer["UniversityLogo"]" />
                </a>

                <!-- زر القائمة على الموبايل -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- الروابط -->
                <div class="collapse navbar-collapse" id="navbarNav">

                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">
                                @Localizer["Home"]
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Courses" asp-action="GetCourses">
                                @Localizer["Courses"]
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Student" asp-action="Assign">
                                @Localizer["AssignCourses"]
                            </a>
                        </li>
                        <!--                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="About">
                                @Localizer
                            </a>
                        </li >-->


                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Contact" asp-action="Index">
                                @Localizer["ContactUs"]
                            </a>
                        </li>

                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Auth" asp-action="Logout">
                                    @Localizer["Logout"]
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Auth" asp-action="Login">
                                    @Localizer["Login"]
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Auth" asp-action="Register">
                                    @Localizer["Register"]
                                </a>
                            </li>
                        }
                    </ul>

                    <!-- أزرار تغيير اللغة -->
                    <div class="ms-auto d-flex">

                        <a class="btn btn-sm btn-outline-primary me-2"
                           asp-controller="Home"
                           asp-action="SetLanguage"
                           asp-route-culture="ar"
                           asp-route-returnUrl="@(Context.Request.Path + Context.Request.QueryString)">
                            عربي
                        </a>

                        <a class="btn btn-sm btn-outline-secondary"
                           asp-controller="Home"
                           asp-action="SetLanguage"
                           asp-route-culture="en"
                           asp-route-returnUrl="@(Context.Request.Path + Context.Request.QueryString)">
                            English
                        </a>

                    </div>

                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
        <div class="container">
            &copy; 2025 - @Localizer["UniversityName"] -
            <a asp-controller="Home" asp-action="Privacy" class="text-decoration-none text-primary fw-semibold">
                @Localizer["Privacy"]
            </a>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

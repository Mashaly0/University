@{
    ViewData["Title"] = "ختيار كورس";
}

<h2 class="mt-4"> اختيار كورس </h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<form asp-action="Assign" method="post" class="mt-4">
    <div class="form-group mb-3">
        <label>اختر الطالب:</label>
        <select class="form-select" name="studentId" required>
            <option value="">-- اختر الطالب --</option>
            @foreach (var s in ViewBag.Students)
            {
                <option value="@s.Id">@s.Name</option>
            }
        </select>
    </div>

    <div class="form-group mb-3">
        <label>اختر الكورسات:</label>
        <div class="form-check">
            @foreach (var c in ViewBag.Courses)
            {
                <div>
                    <input class="form-check-input" type="checkbox" name="courseIds" value="@c.Id" id="course_@c.Id" />
                    <label class="form-check-label" for="course_@c.Id">@c.Name</label>
                </div>
            }
        </div>
    </div>

    <div class="form-group mb-3">
        <label>اختر المدرج:</label>
        <select class="form-select" name="roomId" required>
            <option value="">-- اختر المدرج --</option>
            @foreach (var r in ViewBag.Rooms)
            {
                <option value="@r.Id">@r.Name</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary">حفظ</button>
</form>
